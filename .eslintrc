{
	"parser": "babel-eslint",
	"settings": {
		"react": {
			"pragma": "React",
			"version": "16.0"
		}
	},
	"plugins": [
			"react"
	],
	"extends": [
			"eslint:recommended",
			"plugin:react/recommended"
	],
	"parserOptions": {
			"ecmaVersion": 7,
			"sourceType": "module",
			"ecmaFeatures": {
					"jsx": true
			}
	},
	"rules": {
		"semi": ["error", "never"]
	}
}